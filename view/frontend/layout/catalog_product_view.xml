<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="MaxServ_ProductGallery::css/styles.min.css" />
        <css src="MaxServ_ProductGallery::css/owl.carousel.css" />
        <css src="MaxServ_ProductGallery::css/owl.theme.css" />
        <css src="MaxServ_ProductGallery::css/owl.transitions.css" />
    </head>
    <body>
        <referenceBlock name="product.info.media.image" remove="true"/>
        <referenceBlock name="product.info.media.video" remove="true"/>
        <referenceContainer name="product.info.media">
            <block class="Magento\Catalog\Block\Product\View\Gallery"
                   name="maxserv.product-gallery.product.info.media.gallery"
                   template="MaxServ_ProductGallery::catalog/product/view/gallery.phtml"/>
        </referenceContainer>
    </body>
</page>
